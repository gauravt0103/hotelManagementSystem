<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>HOTEL MAFIA- Add Student</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/dbed6b6114.js" crossorigin="anonymous"></script>
    <link rel="icon" href="images/logo.png" type="image/png">
</head>

<body style="background-color: antiquewhite;">
    <!-- header -->
    <header class="header" id="header">
        <div class="head-top">
            <div class="site-name">
                <a class="extra" href=index.html><span>TCET HOSTEL</span></a>
            </div>
            <div class="site-nav">
                <span id="nav-btn">MENU <i class="fas fa-bars"></i></span>
            </div>
        </div>

        <div class="head-bottom flex">
            <h2>Allocate a room to student</h2>


        </div>
    </header>
    <!-- end of header -->

    <!-- side navbar -->
    <div class="sidenav" id="sidenav">
        <span class="cancel-btn" id="cancel-btn">
            <i class="fas fa-times"></i>
        </span>

        <ul class="navbar">
            <li><a href="/HMS/home">home</a></li>
            <li><a href="/HMS/room/createRoom">add room</a></li>
            <li><a href="/HMS/student">add student</a></li>
            <li><a href="/HMS/studentList">Student-room </a></li>
            <li><a href="/HMS/room/emptyRoom">Empty room</a></li>
        </ul>
        <button class="btn sign-up">sign up</button>
        <button class="btn log-in">log in</button>
    </div>
    <!-- end of side navbar -->

    <!-- fullscreen modal -->
    <div id="modal"></div>
    <!-- end of fullscreen modal -->


    <!-- body(form) of the page start here  -->
    <div class="global-container">
        <div class="card login-form">
            <div class="card-body">
                <h1 class="card-title text-center">Allocate</h1>
                <div class="card-text">
                    <form action="/HMS/student" method="POST">
                        <div class="form-group">
                            <lable class="exampleFormControlInput1">Student Name</lable>
                            <input type="text" class="form-control form-control-sm" name="studentName" id="exapleInputroomnum">
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Address</label>
                            <textarea type="text" class="form-control" id="exampleFormControlTextarea1" name="homeTownAddress"
                                rows="3"></textarea>
                        </div>
                        <label style="padding-right: 6px, top 3px;" for="phone">Enter Student phone number:</label>
                        <input type="tel" id="phone" name="phoneNumber">
                        <br>
                        <label style="padding-right: 6px;" for="phone">Enter Guardian phone number:</label>
                        <input type="tel" id="phone" name="gaurdianPhoneNumber">

                        <div class="form-group">
                            <lable class="exampleFormControlInput1">Room Allocated </lable>
                            <input type="text" class="form-control form-control-sm" name="roomAllocated" id="exapleInputroomnum">
                        </div>
                        <div class="form-group">
                            <lable class="exampleFormControlInput1">Year of Gradution</lable>
                            <input type="number" class="form-control form-control-sm" name="yearOfGraduation" id="exapleInputroomnum">
                        </div>
                        <br>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="Branch">
                            <option selected>Branch</option>
                            <option value="COMP">Computer</option>
                            <option value="IT">IT</option>
                            <option value="ELEX">Elex</option>
                            <option value="MECH">Mech</option>
                            <option value="CIVIL">Civil</option>
                        </select>
                        <button type="submit" class="btn btn-primary btn-block"> Allocate it</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <!-- body(form) of the page end here  -->



    <script src="/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>